<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hyupb.letswalk.Today"
    android:padding="16dp"
    android:background="@color/colorPuple">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_more"
            android:clickable="true"
            />

        <me.itangqi.waveloadingview.WaveLoadingView
            android:id="@+id/today_waveLoadingView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            app:wlv_borderColor="#667788"
            app:wlv_borderWidth="3dp"
            app:wlv_progressValue="0"
            app:wlv_shapeType="circle"
            app:wlv_round_rectangle="true"
            app:wlv_triangle_direction="north"
            app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
            app:wlv_titleCenterStrokeWidth="3dp"
            app:wlv_titleCenter="0"
            app:wlv_titleCenterColor="@android:color/white"
            app:wlv_titleCenterSize="24sp"
            app:wlv_waveAmplitude="30"
            app:wlv_waveColor="#78ceef"/>


        <android.support.v7.widget.CardView
            android:id="@+id/today_pause_iv"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/today_waveLoadingView"
            android:layout_marginTop="32dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/colorDarkBlue"
            app:cardCornerRadius="24dp"
            android:clickable="true"
            android:onClick="clickSP"
            >
            <ImageView
                android:id="@+id/today_pause_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_play"
                android:paddingTop="8dp"
                android:paddingLeft="32dp"
                />
            <TextView
                android:id="@+id/today_pause_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="play"
                android:textColor="@color/colorGray"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_gravity="right"
                android:paddingTop="12dp"
                android:paddingRight="32sp"
                />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_below="@id/today_pause_iv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:weightSum="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/today_km_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorGray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Km"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:weightSum="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/today_Kcal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorGray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Kcal"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:weightSum="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/today_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="0"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorGray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="walking time"
                    android:textSize="16sp"
                    android:textColor="@color/colorGray"/>

            </LinearLayout>


        </LinearLayout>

</RelativeLayout>

